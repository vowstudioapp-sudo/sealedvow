{
  "framework": "vite",
  "devCommand": "vite --port $PORT",
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/ai.js": {
      "maxDuration": 60
    },
    "api/gemini.js": {
      "maxDuration": 60
    },
    "api/create-order.js": {
      "maxDuration": 30
    },
    "api/verify-payment.js": {
      "maxDuration": 30
    },
    "api/admin-generate-founder-codes.js": {
      "maxDuration": 30
    }
  }
}